<Window x:Class="CouseWork3Semester.Views.DocumentsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documents Management" Height="800" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- Documents table -->
            <RowDefinition Height="Auto"/>
            <!-- Add document -->
            <RowDefinition Height="Auto"/>
            <!-- Edit comment -->
            <RowDefinition Height="*"/>
            <!-- Attachments table -->
            <RowDefinition Height="Auto"/>
            <!-- Attach/detach -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="Documents (Settlement)"
                       FontSize="22"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>
            <Button x:Name="RefreshButton" Content="Refresh" Width="120" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Поиск -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Find by number:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchNumberTextBox" Width="200" Margin="0,0,10,0"/>
            <Button x:Name="SearchButton" Content="Search" Width="120"/>
            <Button x:Name="ClearSearchButton" Content="Clear" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Таблица документов -->
        <GroupBox Grid.Row="2" Header="Documents">
            <Grid>
                <DataGrid x:Name="DocumentsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          Margin="5"
                          CanUserResizeRows="False"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Series" Binding="{Binding Series}" Width="120"/>
                        <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="120"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Issue Date" Binding="{Binding IssueDateString}" Width="120"/>
                        <DataGridTextColumn Header="Issued By" Binding="{Binding IssuedBy}" Width="220"/>
                        <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Добавление документа (только ManageDocuments) -->
        <GroupBox Grid.Row="3" Header="Register Document" x:Name="AddDocumentGroup" Margin="0,10,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <StackPanel Width="140" Margin="0,0,10,0">
                        <TextBlock Text="Series"/>
                        <TextBox x:Name="SeriesTextBox"/>
                    </StackPanel>
                    <StackPanel Width="140" Margin="0,0,10,0">
                        <TextBlock Text="Number"/>
                        <TextBox x:Name="NumberTextBox"/>
                    </StackPanel>
                    <StackPanel Width="220" Margin="0,0,10,0">
                        <TextBlock Text="Title"/>
                        <TextBox x:Name="TitleTextBox"/>
                    </StackPanel>
                    <StackPanel Width="180" Margin="0,0,10,0">
                        <TextBlock Text="Issue Date"/>
                        <DatePicker x:Name="IssueDatePicker"/>
                    </StackPanel>
                    <StackPanel Width="220" Margin="0,0,10,0">
                        <TextBlock Text="Issued By"/>
                        <TextBox x:Name="IssuedByTextBox"/>
                    </StackPanel>
                    <StackPanel Width="260" Margin="0,0,10,0">
                        <TextBlock Text="Comment"/>
                        <TextBox x:Name="CommentTextBox"/>
                    </StackPanel>
                    <Button x:Name="AddDocumentButton"
                            Content="Register"
                            Width="140"
                            Margin="10,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Редактирование комментария (только ManageDocuments) и удаление -->
        <GroupBox Grid.Row="4" Header="Edit Selected Document" x:Name="EditDocumentGroup" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Width="260" Margin="0,0,10,0">
                    <TextBlock Text="New Comment"/>
                    <TextBox x:Name="NewCommentTextBox"/>
                </StackPanel>
                <Button x:Name="UpdateCommentButton"
                        Content="Update Comment"
                        Width="160"
                        Margin="10,20,0,0"/>
                <Button x:Name="RemoveDocumentButton"
                        Content="Remove Document"
                        Width="160"
                        Margin="10,20,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Таблица привязок: жильцы, привязанные к выбранному документу -->
        <GroupBox Grid.Row="5" Header="Occupants attached to selected document">
            <Grid>
                <DataGrid x:Name="AttachmentsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          Margin="5"
                          CanUserResizeRows="False"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Occupant Name" Binding="{Binding FullName}" Width="240"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                        <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDateString}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Привязать/отвязать документ к жильцу (только ManageDocuments) -->
        <GroupBox Grid.Row="6" Header="Attach/Detach to Occupant" x:Name="AttachGroup" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Width="320" Margin="0,0,10,0">
                    <TextBlock Text="Select Occupant"/>
                    <ComboBox x:Name="OccupantComboBox" DisplayMemberPath="Display" SelectedValuePath="Id"/>
                </StackPanel>
                <Button x:Name="AttachButton"
                        Content="Attach to Selected Occupant"
                        Width="220"
                        Margin="10,20,0,0"/>
                <Button x:Name="DetachButton"
                        Content="Detach from Selected Occupant"
                        Width="220"
                        Margin="10,20,0,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>