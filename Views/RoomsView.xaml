<Window x:Class="CouseWork3Semester.Views.RoomsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rooms Management" Height="650" Width="950">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и выбор общежития -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Rooms Management" FontSize="22" FontWeight="Bold" Margin="0,0,20,0"/>
            <TextBlock Text="Dormitory:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="DormitoryComboBox" Width="300" DisplayMemberPath="Display" SelectedValuePath="Number"/>
            <Button x:Name="LoadRoomsButton" Content="Load Rooms" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Таблица комнат -->
        <DataGrid x:Name="RoomsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="80"/>
                <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="80"/>
                <DataGridTextColumn Header="Area" Binding="{Binding Area}" Width="100"/>
                <DataGridTextColumn Header="Type (places)" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Occupants" Binding="{Binding OccupantsCount}" Width="100"/>
                <DataGridTextColumn Header="Available" Binding="{Binding AvailablePlaces}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Блок добавления комнаты (только для ролей с ManageRooms) -->
        <GroupBox Header="Add Room" Grid.Row="2" Margin="0,0,0,10" x:Name="AddRoomGroup">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Number"/>
                    <TextBox x:Name="NewRoomNumberTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Floor"/>
                    <TextBox x:Name="NewRoomFloorTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Area"/>
                    <TextBox x:Name="NewRoomAreaTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Type (places)"/>
                    <TextBox x:Name="NewRoomTypeTextBox"/>
                </StackPanel>
                <Button x:Name="AddRoomButton" Content="Add Room" Width="120" Margin="10,20,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Блок редактирования комнаты (только для ролей с ManageRooms; редактирование возможно ТОЛЬКО для пустых комнат) -->
        <GroupBox Header="Edit Selected Room (empty rooms only)" Grid.Row="3" Margin="0,0,0,10" x:Name="EditRoomGroup">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Number"/>
                    <TextBox x:Name="EditRoomNumberTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Floor"/>
                    <TextBox x:Name="EditRoomFloorTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Area"/>
                    <TextBox x:Name="EditRoomAreaTextBox"/>
                </StackPanel>
                <StackPanel Width="160" Margin="0,0,10,0">
                    <TextBlock Text="Type (places)"/>
                    <TextBox x:Name="EditRoomTypeTextBox"/>
                </StackPanel>
                <Button x:Name="UpdateRoomButton" Content="Update Room" Width="120" Margin="10,20,0,0"/>
                <Button x:Name="RemoveRoomButton" Content="Remove Selected Room" Width="180" Margin="10,20,0,0"/>
                <Button x:Name="RefreshButton" Content="Refresh" Width="120" Margin="10,20,0,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>